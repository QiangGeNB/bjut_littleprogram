/* pages/welcome/welcome.wxss */
.all{
  display: flex;
}

.background{
  position: absolute;
  top: 0px;
  left: 0;
  width: 100vw;
  height: 100%;
}

.content{
  position: relative;
  flex: 0 0 60vw;
  margin: 25vw auto;
  height: 75vw;
  padding: 20px;
  background: rgba(255,255,255,0.5);
  border-top-left-radius: 5%;
  border-bottom-right-radius: 5%;
}

.input{
  width: 200px;
  margin: 20px auto;
  border: 1px solid gainsboro;
  border-radius: 10px;
  height: 50px;
  background-color: ghostwhite;
  text-align:center;
  font-weight: bold;
  font-family: MicroSoft YaHei;
}