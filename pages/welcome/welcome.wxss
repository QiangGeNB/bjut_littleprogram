/* pages/welcome/welcome.wxss */
.all{
  display: flex;
  width: 100%;
}
.filter{
  position: absolute;
  z-index: 5;
  top: 50%;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to bottom, 
  rgba(0,0,0,0), rgba(0,0,0,0),rgba(0,0,0,0),rgba(0,0,0,0),
  rgba(255,255,255,0),rgba(255,255,255,.9),rgba(255,255,255,1));
}
.background{
  position: absolute;
  top: 0px;
  left: 0;
  width: 100vw;
  height: 100%;
  background: linear-gradient(left,rgba(255,0,0,0),rgba(255,0,0,1));
}
.biyeji{
  position: absolute;
  display: block;
  top: 10vw;
  left: 50%;
  height: 20vw;
  width: 10vw;
  margin-left: -5vw;
  opacity: 0;
}
.title{
  position: absolute;
  top: 35vw;
  height: 10vw;
  width: 80vw;
  margin-left: 10vw;
  opacity: 0;
}
.content{
  position: relative;
  flex: 0 0 60vw;
  margin-top: 40vw;
  margin-left: auto;
  margin-right: auto;
  height: 75vw;
  padding: 20px;
}

.input{
  width:150px;
  margin: 20px auto;
  border-bottom: 1px solid rgba(255,255,255,0.5);
  height:30px;
  background-color: rgba(255,255,255,0);
  text-align: center;
  font-family: MicroSoft YaHei;
  color: black;
}

.jump{
  width: 70%;
  margin: 0 auto;
  padding-top: 10px;
  border-radius: 5px;
  background-color: rgba(255,255,255,0);
  font-size: 4vw;
  font-weight: bold;
  font-family: MicroSoft YaHei;
  border: 0 solid rgba(0,0,0,0);
  opacity: 0;
}

.but_text{
  width: 100%;
  text-align: center;
}

.story{
  display: block;
  height: 12vw;
  width: 15vw;
  margin: 10px auto;
}

.logo{
  position: absolute;
  display: flex;
  bottom: 0;
  z-index: 100;
  width: 100%;
  height: 12vw;
  margin: 0 auto;
}

.logo_content{
  position: relative;
  flex: 1;
  width: 49%;
  margin: 5px 0;
  padding: 0 10px;
}
.line-right{
  border-right: 1px solid rgba(0,0,0,.5);
}
._logo{
  display: inline-block;
  width: 10vw;
  height: 10vw;
  vertical-align: middle;
}
.logo_text{
  display: inline-block;
  font-size: 2vw; 
}
.logo_left{
  position: absolute;
  right: 10px;
}